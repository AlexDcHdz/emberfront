<div id="dashboard-body">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Tickets Medrano</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a>Dashboard</a></li>
          <li><a href {{action "logout"}}>Salida</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3 col-md-2 sidebar">
        {{admin-menu}}
      </div>
      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1>Comprar tarjeta</h1>
        {{#if (eq step 'sale')}}
        <div class="form-group">
          <label>Número telefónico <strong>A 10 dígitos, sin espacios ni guiones</strong></label>
          {{input-mask mask="9999999999" class="form-control" unmaskedValue=name}}
        </div>
        <div class="form-group">
          <label>Número de tarjeta</label>
          {{input class="form-control" value=cardNumber}}
        </div>
        {{ticket-booth-payment change=false paymentReceived='paymentReceived'}}
        {{/if}}
        {{#if (eq step 'result')}}
            Se ha generado un vale su número es: {{response.id}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
