<div id="dashboard-body">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" >Tickets Medrano</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a {{action "dashboard"}}>Dashboard</a></li>
          <li><a href {{action "logout"}}>Salida</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3 col-md-2 sidebar">
        {{admin-menu}}
      </div>
      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Unir Liquidaciones</h1>
        <form>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                      <label>Desde</label>
                      {{bootstrap-datepicker value=report.from class="form-control" language="es"}}
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                      <label>Hasta</label>
                      {{bootstrap-datepicker value=report.to class="form-control" language="es"}}
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                      <br />
                      <button {{action 'searchPayments' report}} href class="full-width ladda-button" data-style="zoom-out">BUSCAR</button>
                    </div>
                </div>
            </div>
        </form>

        <div class="col-md-8">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ruta</th>
                <th>Autobus</th>
                <th>Fecha</th>
                <th>Operador 1</th>
                <th>Operador 2</th>
                <th>
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each trips as |trip|}}
              <tr>
                <td>{{trip.routeData.name}}</td>
                <td>{{trip.busName}}</td>
                <td>
                  {{moment-format trip.departureDate}}
                </td>
                <td>{{trip.driver1Name}}</td>
                <td>{{trip.driver2Name}}</td>
                <td>
                  <a {{action "selectTrip" trip}} class="btn btn-info">Agregar</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="col-md-4">
          <h2>Viajes seleccionados</h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ruta</th>
                <th>Autobus</th>
              </tr>
            </thead>
            <tbody>
              {{#each selectedTrips as |trip|}}
              <tr>
                <td>{{trip.routeData.name}}</td>
                <td>{{trip.busName}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <a class="btn btn-info" {{action "joinTrips" selectedTrips}}>Unir viajes seleccionados</a>
        </div>
      </div>
    </div>
  </div>
</div>

